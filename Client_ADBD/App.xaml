<Application x:Class="Client_ADBD.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Client_ADBD"
             xmlns:ViewModels="clr-namespace:Client_ADBD.ViewModels"
             xmlns:Views="clr-namespace:Client_ADBD.Views"
             StartupUri="./Views/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <!-- DataTemplate pentru Contul Meu -->
            <DataTemplate DataType="{x:Type ViewModels:VM_Account}">
                <Views:AccountPage/>
            </DataTemplate>

            <!-- DataTemplate pentru Pagina Principală -->
            <DataTemplate DataType="{x:Type ViewModels:VM_MainPage}">
                <Views:MainPage/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>

    

    