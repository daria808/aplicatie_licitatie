<Page x:Class="Client_ADBD.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_ADBD.Views"
      xmlns:UserControl="clr-namespace:Client_ADBD.Views.UserControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">


    <Grid>
        <!-- Conținutul principal -->
        <Border Grid.Column="1" Background="White" Margin="0,0,300,0">
            <ItemsControl ItemsSource="{Binding DisplayedAuctions}" Grid.Row="0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <UserControl:AuctionControler/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>


        </Border>

    </Grid>
</Page>